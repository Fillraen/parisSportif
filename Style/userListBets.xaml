<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style TargetType="materialDesign:Card" x:Key="CardDataTemplateFullWindow">
        <Setter Property="Width" Value="1000"/> 
        <Setter Property="Margin" Value="10,20"/> 
    </Style>

    <Style TargetType="Image" x:Key="IconLeague">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="64"/>
        <Setter Property="Height" Value="64"/>
    </Style>

    <Style TargetType="materialDesign:TimePicker" x:Key="TimeStartMatch">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Margin" Value="10"/>
        <Setter Property="IsEnabled" Value="False"/>
        <Setter Property="SelectedTimeFormat" Value="Long"/>
    </Style>

    <Style TargetType="Image" x:Key="IconTeam">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Width" Value="32"/>
        <Setter Property="Height" Value="32"/>
    </Style>

    <Style TargetType="materialDesign:Chip" x:Key="MaterialDesignChip">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Background" Value="#3e3e3e"/>
    </Style>
</ResourceDictionary>